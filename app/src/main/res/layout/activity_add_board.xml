<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBoardActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.FindCertificateApplication">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="글쓰기"
            app:titleTextColor="@color/annapolosBlue"
            android:id="@+id/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="69dp"
        android:paddingHorizontal="13dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:backgroundTint="@color/mediaDarkShadeOfCyan"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:backgroundTint="@color/silverWhite"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="제목"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/annapolosBlue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/mediaDarkShadeOfCyan"/>
                    <EditText
                        android:id="@+id/board_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textSize="18sp"
                        android:hint="제목을 입력하세요"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:background="@color/cottonBall"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/mediaDarkShadeOfCyan"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="내용"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/annapolosBlue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/mediaDarkShadeOfCyan"/>
                    <EditText
                        android:id="@+id/board_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textSize="18sp"
                        android:hint="본문을 입력하세요"
                        android:gravity="top"
                        android:lines="10"
                        android:maxLength="1500"
                        android:imeOptions="actionNext"
                        android:background="@color/cottonBall"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:text="취소"
                android:backgroundTint="@color/lightCarret"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/annapolosBlue"/>
            <Button
                android:id="@+id/add_board"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:text="저장"
                android:backgroundTint="@color/lightCarret"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/annapolosBlue"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>