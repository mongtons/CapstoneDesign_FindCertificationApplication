<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainfragment.CommunityFragment"
    android:paddingTop="69dp"
    android:paddingHorizontal="13dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="SW자격증 COMMUNITY"
        android:textColor="@color/annapolosBlue"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/mediaDarkShadeOfCyan"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/silverWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="게시판 목록"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/annapolosBlue"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mediaDarkShadeOfCyan"/>
                <Button
                    android:id="@+id/free_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자유게시판"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@color/annapolosBlue"
                    android:background="@drawable/button_design"/>
                <Button
                    android:id="@+id/study_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="스터디게시판"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@color/annapolosBlue"
                    android:background="@drawable/button_design"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>